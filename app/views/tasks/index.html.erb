<div class="container">
  <h2>My tasks</h2>
  <ul>
  <div class="list">
    <% @tasks.each do |task| %>
      <li><%= link_to task.title, task_path(task) %> <i class="fa-solid fa-trash-can"></i><%= link_to "Delete #{task.title}",
              task_path(task),
              method: :delete,
              data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </div>
  </ul>
  <div id="btn"><%= link_to "Add new task", new_task_path %></div>
</div>
